<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backColour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="379dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/green1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/green_button" />

        <ImageView
            android:id="@+id/green2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/green_button" />

        <ImageView
            android:id="@+id/green3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/green_button" />

        <ImageView
            android:id="@+id/yellow1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/yellow_button" />

        <ImageView
            android:id="@+id/yellow2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/yellow_button" />

        <ImageView
            android:id="@+id/yellow3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/yellow_button" />

        <ImageView
            android:id="@+id/red1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/red_button" />

        <ImageView
            android:id="@+id/red2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/red_button" />

        <ImageView
            android:id="@+id/red3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/red_button" />
    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="@string/score_label"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/timer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:text="@string/timer_label"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hi_score_view"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toEndOf="@+id/score_view"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/hi_score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:text="@string/hi_score_label"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />
</android.support.constraint.ConstraintLayout>